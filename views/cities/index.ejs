<!-- Header -->
<% include ../partials/header %>

<div class="container content-container">
    
    <div class="container content-container">
        <a class="btn btn-primary btn-block" href="/cities/new">Click here to add a city!</a>
    </div>
    
    <!-- Create a grid of city pics and names -->
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% cities.forEach(function(city){ %>
            <div class="col-md-4 col-sm-6">
                <figure class="figure">
                  <img src="<%= city["image"] %>" class="figure-img img-fluid rounded" alt="A picture of <%= city.name %>">
                  <figcaption class="figure-caption font-weight-bold"> <%= city["name"] %> </figcaption>
                  <a href="/cities/<%= city._id %>" class="btn btn-sm btn-outline-info">More Info</a> 
                </figure>
            </div>
        <% }); %>
    </div>
</div>

<!-- Footer -->
<% include ../partials/footer %>