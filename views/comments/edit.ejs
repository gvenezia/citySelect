<% include ../partials/header %>

<!-- Edit the comment-->
<a class="ml-2" href="/cities/<%= city_id %>">
    <i class="fas fa-chevron-circle-left"></i> Back to the city page
</a>
<div class="container content-container">
    <h1 class="text-center">Edit your comment:</h1>
    
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-6 col-sm-8">
            <form action="/cities/<%= city_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <form class="form-group">
                    <input class="form-control my-2" name="comment[text]" type="text" value="<%= comment.text %>">
                    <button class="btn btn-success btn-lg btn-block" type="submit">Submit edited comment!</button> 
                </form>
            </form>
        </div>
    </div>
</div>
    
<% include ../partials/footer %>